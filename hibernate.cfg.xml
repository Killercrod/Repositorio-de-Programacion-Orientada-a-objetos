<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- Configuración JDBC -->
        <property name="connection.driver_class">org.h2.Driver</property>
        <!--
            H2 en memoria; DB_CLOSE_DELAY=-1 mantiene la BD viva mientras la JVM
            esté en ejecución (útil para pruebas y desarrollo).
        -->
        <property name="connection.url">jdbc:h2:mem:ocrdb;DB_CLOSE_DELAY=-1</property>
        <property name="connection.username">sa</property>
        <property name="connection.password"></property>

        <!-- Dialecto SQL que Hibernate usará para generar SQL compatible con H2 -->
        <property name="dialect">org.hibernate.dialect.H2Dialect</property>

        <!-- Mostrar SQL generado en stdout (útil durante desarrollo) -->
        <property name="show_sql">true</property>

        <!--
            hbm2ddl.auto=update: actualiza el esquema según las entidades.
            Para producción usar migraciones controladas (Flyway/Liquibase).
        -->
        <property name="hbm2ddl.auto">update</property>

        <property name="connection.pool_size">1</property>

        <!-- Entidad mapeada -->
        <mapping class="mx.ine.ocr.db.model.Person"/>
    </session-factory>
</hibernate-configuration>
